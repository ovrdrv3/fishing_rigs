.inline-block.min-w-full.lg:pr-96
  %h1.p-5.border-b.border-gray-200.dark:border-gray-700.text-base.font-semibold.leading-7.dark:text-white
    All fishing components
  %table.min-w-full.divide-y.divide-gray-300.dark:divide-gray-700
    %thead
      %tr
        %th.px-6.py-3.bg-gray-50.dark:bg-gray-700.text-left.text-xs.font-medium.text-gray-500.dark:text-gray-400.uppercase.tracking-wider
          Name
        %th.px-6.py-3.bg-gray-50.dark:bg-gray-700.text-left.text-xs.font-medium.text-gray-500.dark:text-gray-400.uppercase.tracking-wider
          ✏️
        %th.px-6.py-3.bg-gray-50.dark:bg-gray-700.text-left.text-xs.font-medium.text-gray-500.dark:text-gray-400.uppercase.tracking-wider
          Parts
        %th.px-6.py-3.bg-gray-50.dark:bg-gray-700.text-left.text-xs.font-medium.text-gray-500.dark:text-gray-400.uppercase.tracking-wider
          Created
    %tbody.divide-y.divide-gray-200.dark:divide-gray-700
      - @rigs.each do |rig|
        %tr
          %td.px-6.py-4.whitespace-nowrap
            = link_to rig_path(rig) do
              .text-sm.text-gray-900.dark:text-gray-100= rig.name
          %td.px-6.py-4.whitespace-nowrap
            = link_to edit_rig_path(rig) do
              ✏️
          %td.flex.px-6.py-4.whitespace-nowrap.overflow-auto
            - rig.parts.map do |part|
              - if part.images.first.present?
                %img.h-6.w-6.flex-none.rounded-full.bg-gray-800{src: part.images.first.url, title: part.name}
          %td.px-6.py-4.whitespace-nowrap
            .text-sm.text-gray-900.dark:text-gray-100= rig.created_at.strftime("%B %d")
= react_component("RecentActivity", props: {activity: @recent_activity}, prerender: false)
